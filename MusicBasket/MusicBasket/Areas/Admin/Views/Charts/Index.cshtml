@model IEnumerable<WeeklyChart>

@{
    string strTitle = "Список недельных чартов";
    ViewBag.Title = strTitle;
}
<a asp-area="Admin" asp-controller="Home" asp-action="Index">Панель администратора</a>
<a asp-area="Admin" asp-controller="WeeklyChart" asp-action="Create">Добавить</a>
<div class="table__container">
    <table>
        <thead>
            <tr>
                <th>
                    № Чарта
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @for(int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            @(i+1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.ElementAt(i).ReleaseDate)
                        </td>
                        <td>
                            <div class="table__link">
                                <a asp-area="Admin" asp-controller="Songs" asp-action="Edit" asp-route-id="Model.ElementAt(i).Id">Изменить</a>
                                <a asp-area="Admin" asp-controller="Songs" asp-action="Details" asp-route-id="Model.ElementAt(i).Id">Подробнее</a>
                                <a asp-area="Admin" asp-controller="Songs" asp-action="Delete" asp-route-id="Model.ElementAt(i).Id">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
